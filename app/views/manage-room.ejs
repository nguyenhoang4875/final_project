                            </div>
                        </div>
                        <div class="btn btn-success" onclick="showCreateUser()">
                            <i class="fa fa-plus-circle" style="color: white"></i> New user
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Topic</th>
                        <th>Quantity</th>
                        <th>Level</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                  <p>  <%=data%> </p>
                    <tbody>
                    <% if (!!data && data.status === 200) {
                    data.rooms.forEach((room, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= room.name %></td>
                            <td><%= room.quantity%></td>
                            <td><%= room.level%></td>
                            <td><%= room.password%></td>
                        </tr>
                    <% }) %>
                    <% } else { %>
                        <div> Rooms Empty</div>
                    <% } %>
                    </tbody>
                </table>
